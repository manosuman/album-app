<h1 class="newalbum">Edit Albums</h1>

<%= form_with(url: user_album_path,method: "put") do |form| %>
  <div class="field">
      <div class="row">
        <div class="col-md-4 offset-4">
          <%= form.label :title %><br />
          <%= form.text_field :title, :class => 'form-control', :value => @album.try(:title) %>
          <% @album.errors.full_messages_for(:title).each do |message| %>
          <div><%= message %></div>
          <% end %>
        </div>
      </div>
  </div>
  <div class="field">
      <div class="row">
        <div class="col-md-4 offset-4">
          <%= form.label :description %><br />
          <%= form.text_area :description, :class => 'form-control', :value => @album.try(:description) %>
          <% @album.errors.full_messages_for(:title).each do |message| %>
          <div><%= message %></div>
          <% end %>
        </div>
      </div>
  </div>
  <div>

  <div class="field">
    <div class="row">
      <div class="col-md-4 offset-4">
        <%= form.submit "Update", :class => 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
