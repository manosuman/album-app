<h1>New Albums</h1>

<%= form_with model: @album do |form| %>
  <div>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
        <% @album.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
        <% end %>
  </div>

  <div>
        <%= form.label :description %><br>
        <%= form.text_area :description %>
        <% @album.errors.full_messages_for(:description).each do |message| %>
        <div><%= message %></div>
        <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
